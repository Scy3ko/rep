}

ul#album-fotos li span { /*CONFIGURANDO A LEGENDA DAS IMAGENS DA GALERIA*/
	opacity: 0;
	color: #ffffff;
	text-shadow: 1px 1px 1px #000000;
	background-color: rgba(0,0,0,0.3);
	font-size: 9pt;
	line-height: 370px;
	padding: 5px;
}

ul#album-fotos li:hover span { /*CADA VEZ QUE PASSA O MOUSE POR CIMA DE UMA IMAGEM DA GALERIA, IRA APARECER A LEGENDA*/
	opacity: 1;
}

ul#album-fotos li:hover {
	-webkit-transform: scale(1.5); /*WEBKIT PARA TRANSFORMAR A ESCALA DA IMAGEM*/
}

ul#album-fotos li#foto01 { /*INSERINDO AS IMAGENS NA GALERIA*/
