}

ul#album-fotos li {/*configurando todos os 'li' de 'ul'*/
	float: left; /*Um flutuando ao lado do outro*/
	width: 200px;
	height: 200px;
	margin: 10px;
	border: 5px solid #ffffff;
	background-color: #ffffff;
